{
  "name": "antikit",
  "version": "1.15.0",
  "description": "CLI tool to manage AI agent skills from Anti Gravity skills repository",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "antikit": "src/index.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "release": "commit-and-tag-version",
    "prepare": "husky",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "cli",
    "skills",
    "ai",
    "agent",
    "claude",
    "gemini",
    "llm"
  ],
  "author": "vunamhung",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vunamhung/antikit.git"
  },
  "bugs": {
    "url": "https://github.com/vunamhung/antikit/issues"
  },
  "homepage": "https://github.com/vunamhung/antikit#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/**/*"
  ],
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "omelette": "^0.4.17",
    "ora": "^8.1.1",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@vitest/coverage-v8": "^3.0.0",
    "commit-and-tag-version": "^12.6.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "vitest": "^3.0.0"
  }
}
